<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/resources/css/profesores.css">
    <link rel="icon" href="/resources/img/logo.png">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Anglo Americano</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>






<body background="../img/fondo.jpg">
</head>
<body>

    <div class="flex">
        <a href="index.html"><img src="resources/img/logo.png" alt="" height="110" width="auto"></a>
    
    <h1 class="texto4">Agregar alumno</h1>
    </div>

    <% (user) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/update" method="POST">
                    <input id="id" name="id" value="<%= user.id %>" hidden>
                    <div class="mb-3">
                    <label for="user" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="user" name="user" value="<%= user.user %>" tabindex="1">
                    



                    </div>
                    <div class="mb-3">
                    <label for="user" class="form-label">Rol</label>
                    <select id="rol" name="rol" class="form-select" tabindex="2">
                        <option <%= user.rol== 'admin' ? "selected" : '' %>value="admin">Admin</option>
                        <option <%= user.rol== 'data-entry' ? "selected" : '' %>value="data-entry">Data Entry</option>
                    </select>
                    </div>
                    <% } %>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>

</head>
</body>
</html>